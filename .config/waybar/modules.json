{
	"custom/arch": {
		"format": "󰣇",
		"on-click": "~/.config/waybar/scripts/wofi.sh",
		"tooltip-format": "Show Wofi Menu"
	},

	"hyprland/workspaces": {
		"all-outputs": true,
		"format": "{name}",
		"persistent-workspaces": {
			"*": 4
		}
	},

	"hyprland/window": {
		"format": "{class}",
		"icon": true
	},

    "custom/swaync": {
		"format": "{} {icon}",
		"format-icons": {
			"notification": "<span foreground='red'><sup></sup></span>",
			"none": "",
			"dnd-notification": "<span foreground='red'><sup></sup></span>",
			"dnd-none": "",
			"inhibited-notification": "<span foreground='red'><sup></sup></span>",
			"inhibited-none": "",
			"dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
			"dnd-inhibited-none": ""
		},
		"return-type": "json",
		"exec-if": "which swaync-client",
		"exec": "swaync-client -swb",
		"on-click": "sleep 0.1 && swaync-client -t -sw",
		"on-click-right": "swaync-client -d -sw",
		"escape": true,
		"tooltip-format": "Left Click: Launch Notification Center\nRight Click: Do not Disturb"
	},

	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": " ",
			"deactivated": " "
		},
		"tooltip-format-activated": "Inhibit Sleep: {status}",
		"tooltip-format-deactivated": "Inhibit Sleep: {status}"
    },

    "wireplumber#sink": {
		"node-type": "Audio/Sink",
		"format": "{icon} {volume}%",
		"format-bluetooth": "{icon} {volume}% ",
		"format-bluetooth-muted": "󰝟 ",
		"format-muted": "󰝟",
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": ["", "", ""]
		},
		"max-volume": 100,
		"on-click": "pavucontrol -t 1",
		"on-click-right": "wpctl set-mute @DEFAULT_SINK@ toggle"
    },

	"wireplumber#source": {
		"node-type": "Audio/Source",
		"format": "{format_source}",
		"format_source": " {volume}%",
		"format-bluetooth": " {volume}% ",
		"format-muted": " ",
		"format-bluetooth-muted": " ",
		"on-click": "pavucontrol -t 4",
		"max-volume": 100,
		"on-click-right": "wpctl set-mute @DEFAULT_SOURCE@ toggle"
	},

	"network#speed": {
		"interval": 1,
		"format": "{ifname}",
		"format-alt":"{icon} ",
		"format-wifi": "{icon}   {bandwidthUpBytes}  {bandwidthDownBytes}",
		"format-ethernet": "󰌘  {bandwidthUpBytes}  {bandwidthDownBytes}",
		"format-disconnected": "󰌙",
		"tooltip-format": "{ipaddr}",
		"format-linked": "󰈁 {ifname} (No IP)",
		"tooltip-format-wifi": "{essid} {icon} {signalStrength}%",
		"tooltip-format-ethernet": "{ifname} 󰌘",
		"tooltip-format-disconnected": "󰌙 Disconnected",
		"format-icons": [
			"󰤯", "󰤟", "󰤢", "󰤥", "󰤨"
		],
		"on-click-right": "kitty nmtui"
	},

	"cpu": {
		"format": " {usage}%",
		"on-click": "kitty htop"
	},

	"memory": {
		"format": " {}%",
		"on-click": "kitty htop"
	},

	"temperature": {
		"interval": 10,
		"critical-threshold": 100,
		"format-critical": " {temperatureC}",
		"format": " {temperatureC}°C",
		"on-click": "kitty htop"
	},

	"battery": {
		"bat": "BAT0",
		"interval": 1,
		"states": {
			"good" : 80,
			"warning": 20,
			"critical": 10
		},
		"format": "{icon} {capacity}%",
		"format-full": "{icon} {capacity}%",
		"format-charging": "󰂄 {capacity}%",
		"format-plugged": " {capacity}%",
		"tooltip-format-discharging": "{timeTo}\nCharge Cycles: {cycles}\nBattery Health: {health}%",
		"tooltip-format-charging": "{timeTo}\nPower Draw {power} watt\nCharge Cycles: {cycles}\nBattery Health: {health}%",
		"format-icons": [
			"󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
		]
	},

	"clock": {
		"format": "{:%I:%M %p}",
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
		"format-alt": "{:%Y-%m-%d}"
	},

	"power-profiles-daemon": {
		"format": "{icon}",
		"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
		"format-icons": {
			"default": "",
			"performance": "",
			"balanced": "",
			"power-saver": ""
		}
	},

	"custom/power": {
		"tooltip": true,
		"on-click": "wlogout -b 3 -T 200 -B 200",
		"format": "",
		"tooltip-format": "Power Menu"
	},

	"tray": {
		"icon-size": 20,
		"spacing": 4
	},

	"bluetooth": {
		"format": "",
		"format-disabled": "󰂳",
		"format-connected": "󰂱 {num_connections}",
		"tooltip-format": " {device_alias}",
		"tooltip-format-connected": "{device_enumerate}",
		"tooltip-format-enumerate-connected": " {device_alias} 󰂄{device_battery_percentage}%",
		"on-click": "blueman-manager",
		"on-click-right": "~/.config/waybar/scripts/bluetooth-toggle.sh"
	},

	"backlight": {
		"interval": 2,
		"align": 0,
		"rotate": 0,
		"format": "{icon} {percent}%",
		"format-icons": [
			"", "", "", "󰃝", "󰃞", "󰃟", "󰃠"
		],
		"tooltip-format": "backlight {percent}%",
		"icon-size": 10,
		"on-scroll-up": "~/.config/waybar/scripts/brightness.sh up",
		"on-scroll-down": "~/.config/waybar/scripts/brightness.sh down",
		"smooth-scrolling-threshold": 1
	},

	"mpris": {
		"interval": 1,
		"format": "{player_icon}",
		"format-paused": "{status_icon}",
		"on-click": "playerctl play-pause",
		"on-scroll-up": "playerctl previous",
		"on-scroll-down": "playerctl next",
		"scroll-step": 5.0,
		"smooth-scrolling-threshold": 1,
		"player-icons": {
			"chromium": "",
			"default": "",
			"firefox": "",
			"kdeconnect": "",
			"mopidy": "",
			"mpv": "󰐹",
			"spotify": "",
			"vlc": "󰕼"
		},
		"status-icons": {
			"paused": "󰐎",
			"playing": "",
			"stopped": ""
		}
	},

	"custom/updates": {
		"format": "{icon}{0}",
		"return-type": "json",
		"format-icons": {
			"pending-updates": " ",
			"updated": ""
		},
		"exec-if": "which waybar-updates",
 		"exec": "waybar-updates --flatpak --devel --notify --tooltip {}",
		"on-click": "waybar-updates --flatpak --devel --notify --tooltip {}",
		"on-click-right": "kitty $HOME/.config/waybar/scripts/update-pkgs.sh"
	},

	"custom/cliphist":{
		"format": "󰨸",
		"on-click": "~/.config/waybar/scripts/cliphist.sh",
		"on-click-right": "cliphist wipe",
		"tooltip-format": "Clipboard History\nRight Click: Clear"
	}
}
